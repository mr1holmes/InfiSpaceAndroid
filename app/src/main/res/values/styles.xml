<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="Theme.InfiSpace.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="homeAsUpIndicator">@mipmap/ic_launcher</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LaunchTheme" parent="Theme.InfiSpace.Base">
        <item name="android:windowBackground">@color/launch_background</item>
    </style>

    <!--Actionbar Stuff-->
    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/text_on_primary</item>
        <item name="android:textColorSecondary">@color/subtitle_on_primary</item>
    </style>


    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--App view style customization-->
    <style name="ProgressStyleSmall">
        <item name="android:progressBarStyle">@android:style/Widget.ProgressBar.Small</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/unselected_tab_on_primary</item>
    </style>

</resources>
